<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="云天励飞人脸识别SDK"
                    android:textSize="20dp"
                    android:visibility="visible" />
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:onClick="setting"
                    android:background="@drawable/ic_settings_black_24dp" />
            </LinearLayout>


            <Button
                android:id="@+id/bt_pic_detect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="人脸图片检测"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_video_detect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="实时视频流检测"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_compare_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1:1图片VS图片"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_compare_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1:1视频流vs图片"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_detect_living"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="视频流活体检测"
                android:visibility="visible" />

            <Button
                android:id="@+id/bt_face_attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="人脸属性检测" />

            <Button
                android:id="@+id/bt_face_lib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="人脸库管理" />

            <Button
                android:id="@+id/bt_face_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="视频流人脸1:N" />

            <Button
                android:id="@+id/bt_living_ir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="红外活体" />

            <Button
                android:id="@+id/bt_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="数据测试" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>